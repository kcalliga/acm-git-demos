            release.openshift.io/create-only: "true"
          name: cluster
        spec:
        identityProviders:
        - htpasswd:
            fileData:
              name: htpasswd-gmszp
          mappingMethod: claim
          name: htpasswd
          type: HTPasswd
        kind: List
