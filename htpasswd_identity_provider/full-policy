apiVersion: apps.open-cluster-management.io/v1
kind: PlacementRule
metadata:
  name: oauth-placement
  namespace: default
spec:
  clusterSelector:
    matchExpressions:
      - key: local-cluster
        operator: In
        values:
          - "true"
  clusterConditions: []
---
apiVersion: policy.open-cluster-management.io/v1
kind: PlacementBinding
metadata:
  name: oauth-placement
  namespace: default
placementRef:
  name: oauth-placement
  apiGroup: apps.open-cluster-management.io
  kind: PlacementRule
subjects:
  - name: oauth
    apiGroup: policy.open-cluster-management.io
    kind: Policy
